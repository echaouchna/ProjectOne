<div class="container">
  <% if (errors) {%>
    <% errors.forEach(function (error) { %>
      <%= __(error) %>
    <% }) %>
  <% } %>

  <form role="form" action="/auth/local" method="post">
    <div class="input-group">
      <span class="input-group-addon" id="identifier-addon">@</span>
      <input type="text" name="identifier" class="form-control" placeholder="Username or Email" aria-describedby="identifier-addon" autofocus>
    </div>
    <br/>
    <div class="input-group">
      <span class="input-group-addon" id="password-addon">
        <i class="fa fa-key"></i>
      </span>
      <input type="password" name="password" class="form-control" placeholder="Password" aria-describedby="password-addon">
    </div>
    <br/>
    <button type="submit" class="btn btn-default">Sign in</button>
  </form>

  <% if (Object.keys(providers).length) {%>
    <h4>You can also use one of these...</h4>

    <% Object.keys(providers).forEach(function (key) { %>
      <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
    <% }) %>
  <% } %>
</div>